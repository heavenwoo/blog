<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}   {% endblock %}{{ site.name }}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheets %}
        {% stylesheets filter="scssphp" output="css/app.css"
        "@TaichiBlogBundle/Resources/public/scss/bootstrap.scss"
        "@TaichiBlogBundle/Resources/public/scss/font-awesome.scss"
        "@TaichiBlogBundle/Resources/public/css/bootstrap-datetimepicker.min.css"
        "@TaichiBlogBundle/Resources/public/css/font-lato.css"
        "@TaichiBlogBundle/Resources/public/css/prism.css"
        "@TaichiBlogBundle/Resources/public/scss/main.scss" %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
    <script src="//cdn.bootcss.com/html5shiv/3.7.3/html5shiv.js"></script>
    <script src="//cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="{% block body_id %}{% endblock %}">
{% block nav %}
    <header>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('blog_index') }}">{{ site.name }}</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{ path('admin_dashboard') }}">
                                    <i class="fa fa-lock"></i> Admin
                                </a>
                            </li>
                        {% endif %}
                        {% if app.user %}
                            <li>
                                <a href="{{ path('security_logout') }}">
                                    <i class="fa fa-sign-out"></i>
                                    Logout
                                </a>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('security_login_form') }}">
                                    <i class="fa fa-sign-in"></i>
                                    Login
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </header>
{% endblock %}

<div class="container body-container">
    {% block heading %}{% endblock %}
    <div class="row">
        <div class="col-md-12">
            {{ include('TaichiBlogBundle::_flash_messages.html.twig') }}
            {% block content %}{% endblock %}
        </div>
    </div>
</div> <!-- /container -->
{% block footer %}
    <footer>
        <div class="container">
            <div class="row">
                <div id="footer-copyright" class="col-md-6">
                    <p>Â© 2015 - The Symfony Project</p>
                </div>
                <div id="footer-resources" class="col-md-6">
                    <p>
                        <a href="https://www.github.com/heavenwoo/blog"><i class="fa fa-github"></i></a>
                        <a href="#"><i class="fa fa-chevron-up"></i></a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
{% block javascripts %}
    {% javascripts filter="?jsqueeze" output="js/app.js"
    "@TaichiBlogBundle/Resources/public/js/jquery-2.1.4.js"
    "@TaichiBlogBundle/Resources/public/js/moment.min.js"
    "@TaichiBlogBundle/Resources/public/js/bootstrap-3.3.4.js"
    "@TaichiBlogBundle/Resources/public/js/bootstrap-datetimepicker.min.js"
    "@TaichiBlogBundle/Resources/public/js/prism.js"
    "@TaichiBlogBundle/Resources/public/js/main.js" %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>