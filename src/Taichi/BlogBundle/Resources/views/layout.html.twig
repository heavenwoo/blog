<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>{% block title %}   {% endblock %}{{ sitename }}</title>

    {% block stylesheets %}
        {% stylesheets output="css/app.css"
        "@TaichiBlogBundle/Resources/public/css/semantic.css"
        "@TaichiBlogBundle/Resources/public/css/highlight-solarized-light.css"
        "@TaichiBlogBundle/Resources/public/css/app.css" %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}

    <link href="//cdn.bootcss.com/semantic-ui/2.1.7/components/icon.min.css" rel="stylesheet">

    {% block javascripts %}
        {% javascripts filter="?jsqueeze" output="js/app.js"
        "@TaichiBlogBundle/Resources/public/js/jquery-2.1.4.js"
        "@TaichiBlogBundle/Resources/public/css/semantic.js"
        "@TaichiBlogBundle/Resources/public/js/rainyday.min.js"
        "@TaichiBlogBundle/Resources/public/js/highlight.pack.js"
        "@TaichiBlogBundle/Resources/public/js/app.js" %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script>
            $('.ui.dropdown')
                    .dropdown()
            ;
        </script>
    {% endblock %}

</head>
<body>

{% block body %}
    <!-- Following Menu -->
    <div class="ui large top fixed hidden menu">
        <div class="ui container">
            <a class="item" href="{{ path('blog_index') }}">
                {% image '@TaichiBlogBundle/Resources/public/images/logo.png' %}
                <img src="{{ asset_url }}" class="logo">
                {% endimage %}
            </a>
            <div class="right menu">
                {% if app.user and is_granted('ROLE_ADMIN') %}
                    <div class="item">
                        <a class="ui button" href="{{ path('admin_dashboard') }}">
                            <i class="fa fa-lock"></i> {{ 'menu.admin'|trans }}
                        </a>
                    </div>
                {% endif %}
                {% if app.user %}
                    <div class="item">
                        <a class="ui primary button" href="{{ path('security_logout') }}">
                            <i class="fa fa-sign-out"></i>
                            {{ 'menu.logout'|trans }}
                        </a>
                    </div>
                {% else %}
                    <div class="item">
                        <a class="ui button" href="{{ path('security_login_form') }}">
                            <i class="fa fa-sign-in"></i>
                            {{ 'menu.login'|trans }}
                        </a>
                    </div>
                    <div class="item">
                        <a class="ui primary button">{{ 'menu.signup'|trans }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Sidebar Menu -->
    <div class="ui vertical inverted sidebar menu">
        <a class="item" href="{{ path('blog_index') }}">
            {% image '@TaichiBlogBundle/Resources/public/images/logo.png' %}
            <img src="{{ asset_url }}" class="mini image">
            {% endimage %}
        </a>
        {% if app.user and is_granted('ROLE_ADMIN') %}
            <a class="item" href="{{ path('admin_dashboard') }}">
                <i class="fa fa-lock"></i> {{ 'menu.admin'|trans }}
            </a>
        {% endif %}
        {% if app.user %}
            <a class="item" href="{{ path('security_logout') }}">
                <i class="fa fa-sign-out"></i>
                {{ 'menu.logout'|trans }}
            </a>
        {% else %}
            <a class="item" href="{{ path('security_login_form') }}">
                <i class="fa fa-sign-in"></i>
                {{ 'menu.login'|trans }}
            </a>
            <a class="item">{{ 'menu.signup'|trans }}</a>
        {% endif %}
    </div>


    <!-- Page Contents -->
    <div class="pusher">
        {% block header %}
            <header class="ui inverted vertical masthead center aligned segment banner">

                <div class="ui container">
                    <div class="ui large secondary inverted pointing menu">
                        <a class="toc item">
                            <i class="sidebar icon"></i>
                        </a>
                        <a class="active item" href="{{ path('blog_index') }}">{{ sitename }}</a>
                        <div class="right item">
                            {% if app.user and is_granted('ROLE_ADMIN') %}
                                <a class="ui inverted button" href="{{ path('admin_dashboard') }}">
                                    <i class="fa fa-lock"></i> {{ 'menu.admin'|trans }}
                                </a>
                            {% endif %}
                            {% if app.user %}
                                <a class="ui inverted teal button" href="{{ path('security_logout') }}">
                                    <i class="fa fa-sign-out"></i>
                                    {{ 'menu.logout'|trans }}
                                </a>
                            {% else %}
                                <a class="ui inverted button" href="{{ path('security_login_form') }}">
                                    <i class="fa fa-sign-in"></i>
                                    {{ 'menu.login'|trans }}
                                </a>
                                <a class="ui inverted teal button">{{ 'menu.signup'|trans }}</a>
                            {% endif %}

                            <div class="ui icon buttons">
                                <div class="ui top left pointing dropdown button">
                                <i class="world icon"></i>
                                <div class="menu">
                            {% for locale in locales() %}
                                <div class="item"><a href="{{ path(app.request.get('_route', 'blog_index'), app.request.get('_route_params', [])|merge({ _locale: locale.code })) }}">{{ locale.name|capitalize }}</a></div>
                            {% endfor %}
                                </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>

                <div class="ui text container">
                    {% block heading %}
                    <h1 class="ui inverted header">
                        {{ sitename }}
                    </h1>
                    <h2>Built by Symfony 3 and Semantic UI</h2>
                    {% endblock %}
                </div>

            </header>
        {% endblock %}

        <div class="ui vertical stripe segment">
            <div class="ui text container">
                {{ include('TaichiBlogBundle::_flash_messages.html.twig') }}
                {% block content %}{% endblock %}
            </div>
        </div>

        {% block footer %}
            <div class="ui inverted vertical footer segment">
                <div class="ui center aligned container">
                    <div class="ui stackable inverted divided grid">
                        <div class="three wide column">
                            <h4 class="ui inverted header">Group 1</h4>
                            <div class="ui inverted link list">
                                <a href="#" class="item">Link One</a>
                                <a href="#" class="item">Link Two</a>
                                <a href="#" class="item">Link Three</a>
                                <a href="#" class="item">Link Four</a>
                            </div>
                        </div>
                        <div class="three wide column">
                            <h4 class="ui inverted header">Group 2</h4>
                            <div class="ui inverted link list">
                                <a href="#" class="item">Link One</a>
                                <a href="#" class="item">Link Two</a>
                                <a href="#" class="item">Link Three</a>
                                <a href="#" class="item">Link Four</a>
                            </div>
                        </div>
                        <div class="three wide column">
                            <h4 class="ui inverted header">Group 3</h4>
                            <div class="ui inverted link list">
                                <a href="#" class="item">Link One</a>
                                <a href="#" class="item">Link Two</a>
                                <a href="#" class="item">Link Three</a>
                                <a href="#" class="item">Link Four</a>
                            </div>
                        </div>
                        <div class="seven wide column">
                            <h4 class="ui inverted header">Footer Header</h4>
                            <p>Extra space for a call to action inside the footer that could help re-engage users.</p>
                        </div>
                    </div>
                    <div class="ui inverted section divider"></div>
                    {% image '@TaichiBlogBundle/Resources/public/images/logo.png' %}
                    <img src="{{ asset_url }}" class="ui centered mini image">
                    {% endimage %}
                    <div class="ui horizontal inverted small divided link list">
                        <a class="item" href="#">Site Map</a>
                        <a class="item" href="#">Contact Us</a>
                        <a class="item" href="#">Terms and Conditions</a>
                        <a class="item" href="#">Privacy Policy</a>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}
</body>

</html>