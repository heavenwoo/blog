{% extends "TaichiBlogBundle::layout.html.twig" %}

{% block title %}User login - {% endblock %}

{% block body %}

    {% block stylesheets %}
        {{ parent() }}
        <style type="text/css">
            body {
                background-color: #DADADA;
            }
            body > .grid {
                height: 50%;
            }
            .image {
                margin-top: -100px;
            }
            .column {
                max-width: 450px;
            }
        </style>
    {% endblock %}
    {% block javascript %}
        {{ parent() }}
        <script>
            $(document)
                    .ready(function() {
                        $('.ui.form')
                                .form({
                                    fields: {
                                        email: {
                                            identifier  : '_username',
                                            rules: [
                                                {
                                                    type   : 'empty',
                                                    prompt : 'Please enter your username'
                                                },
                                                {
                                                    type   : 'length[4]',
                                                    prompt : 'Your username name must be at least 4 characters'
                                                }
                                            ]
                                        },
                                        password: {
                                            identifier  : '_password',
                                            rules: [
                                                {
                                                    type   : 'empty',
                                                    prompt : 'Please enter your password'
                                                },
                                                {
                                                    type   : 'length[6]',
                                                    prompt : 'Your password must be at least 6 characters'
                                                }
                                            ]
                                        }
                                    }
                                })
                        ;
                    })
            ;
        </script>
    {% endblock %}

    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 class="ui teal image header">
                {% image '@TaichiBlogBundle/Resources/public/images/logo.png' %}
                <img src="{{ asset_url }}" class="image">
                {% endimage %}
                <div class="content">
                    Log-in to your account
                </div>
            </h2>
            <form class="ui large form" action="{{ path('security_login_check') }}" method="post" role="form">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="_username" placeholder="Username">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="_password" placeholder="Password">
                        </div>
                    </div>
                    <button type="submit" class="ui fluid large teal submit button">
                        Sign in
                    </button>
                </div>

                <div class="ui error message"></div>

            </form>

            <div class="ui message">
                New to us? <a href="#">Sign Up</a>
            </div>
        </div>
    </div>

{% endblock %}
