{% extends "TaichiBlogBundle::layout.html.twig" %}
{# form_theme form 'bootstrap_3_layout.html.twig' #}

{% block title %}User login - {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #1ABC9C;
            margin-top: 150px;
        }
    </style>
    {% endblock %}

{% block nav %}{% endblock %}

{% block content %}
    <div class="col-md-4 col-md-offset-4">
        <div class="login-form">
            <form action="{{ path('security_login_check') }}" method="post" role="form">
                <div class="form-group">
                <div class="input-group">
                    <input type="text" class="form-control login-field" name="_username" value="" placeholder="Enter your name"
                           id="username">
                    <label class="input-group-addon" for="username"><i class="fa fa-user"></i></label>
                </div>
                    </div>

                <div class="form-group">
                <div class="input-group">
                    <input type="password" class="form-control login-field" name="_password" value="" placeholder="Password"
                           id="password">
                    <label class="input-group-addon" for="password"><i class="fa fa-lock"></i></label>
                </div>
                </div>
                {% if error %}
                    <div class="alert alert-dismissible alert-danger"
                         role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <button type="submit" class="btn btn-success btn-block">
                    <i class="fa fa-sign-in"></i> Sign in
                </button>
                <a class="login-link" href="#">Lost your password?</a>
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}