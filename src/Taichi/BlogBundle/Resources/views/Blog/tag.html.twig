{% extends 'TaichiBlogBundle::layout.html.twig' %}

{% block body_id 'blog_index' %}

{% block heading %}{% endblock %}

{% block content %}
    <h1>
        Tag: {{ tag.name }}
    </h1>
    <hr>
    {% for post in posts %}
        <article class="post">
            <h2>
                <a href="{{ path('blog_post', {slug: post.slug}) }}">
                    {{ post.subject }}
                </a>
            </h2>

            <ul class="post-meta">
                <li><i class="fa fa-calendar small"></i> {{ post.createdAt|date("F jS \\@ G:i") }}</li>
                <li><i class="fa fa-folder small"></i> <a
                            href="{{ path('blog_category', {name: post.category.name}) }}">{{ post.category.name }}</a></li>
            </ul>
            <p class="lead">{{ post.summary }}</p>
        </article>
    {% else %}
        <div class="well">Null</div>
    {% endfor %}
    <div class="text-center">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}