{% extends 'TaichiBlogBundle::layout.html.twig' %}

{% block heading %}

{% endblock %}

{% block content %}
    <div class="col-sm-9">

        <div class="messages">
        </div>
        <h3>
            Category: {{ category.name }}
        </h3>
        <hr>
        {% for post in posts %}
            <article class="post">
                <h6>
                    <a href="{{ path('blog_post', {slug: post.slug}) }}">
                        {{ post.subject }}
                    </a>
                </h6>

                <div>
                    <i class="fui-time small"></i> {{ post.createdAt|date("Y-m-d G:i") }}
                    {% for tag in post.tags %}
                        <i class="fui-tag small"></i> <a href="{{ path('blog_tag', {name: tag.name}) }}">{{ tag.name }}</a>
                    {% endfor %}
                </div>
                <p>{{ post.summary }}</p>
            </article>
        {% else %}
            <div class="well">Null</div>
        {% endfor %}
        <div class="text-center">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}