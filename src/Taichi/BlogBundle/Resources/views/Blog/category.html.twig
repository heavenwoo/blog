{% extends 'TaichiBlogBundle::layout.html.twig' %}

{% block body_id 'blog_index' %}

{% block heading %}{% endblock %}

{% block content %}
    <h1>
        Category: {{ category.name }}
    </h1>
    <hr>
    {% for post in posts %}
        <article>
            <h2>
                <a href="{{ path('blog_post', {slug: post.slug}) }}">
                    {{ post.subject }}
                </a>
            </h2>

            <ul class="post-meta">
                <li><i class="fa fa-calendar small"></i> {{ post.createdAt|date("Y-m-d G:i") }}</li>
                {% for tag in post.tags %}
                    <li><i class="fa fa-tag small"></i> <a
                                href="{{ path('blog_tag', {name: tag.name}) }}">{{ tag.name }}</a></li>
                {% endfor %}
            </ul>
            <p class="lead">{{ post.summary }}</p>
        </article>
    {% else %}
        <div class="well">Null</div>
    {% endfor %}
    <div class="text-center">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}