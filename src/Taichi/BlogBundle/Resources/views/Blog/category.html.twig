{% extends 'TaichiBlogBundle::layout.html.twig' %}

{% block heading %}

{% endblock %}

{% block content %}
    <div class="col-sm-9">

        <div class="messages">
        </div>
        <h1>
            Category: {{ category.name }}
        </h1>
        <hr>
        {% for post in posts %}
            <article>
                <h2>
                    <a href="{{ path('blog_post', {slug: post.slug}) }}">
                        {{ post.subject }}
                    </a>
                </h2>

                <div class="text-muted">
                    <i class="fa fa-calendar small"></i> {{ post.createdAt|date("Y-m-d G:i") }}
                    {% for tag in post.tags %}
                        <i class="fa fa-tag small"></i> <a href="{{ path('blog_tag', {name: tag.name}) }}">{{ tag.name }}</a>
                    {% endfor %}
                </div>
                <p class="lead">{{ post.summary }}</p>
            </article>
        {% else %}
            <div class="well">Null</div>
        {% endfor %}
        <div class="text-center">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}