{% extends 'TaichiBlogBundle::layout.html.twig' %}

{% block heading %}

{% endblock %}

{% block content %}
    <div id="main" class="col-sm-9">

        <div class="messages">
        </div>
        <article>
            <h1>{{ post.subject }}</h1>
            <div class="text-muted">
                <i class="fa fa-calendar small"></i> {{ post.createdAt|date("F jS \\@ G:i") }}
                <i class="fa fa-folder small"></i> <a
                        href="{{ path('blog_category', {name: post.category.name}) }}">{{ post.category.name }}</a>
                {% for tag in post.tags %}
                    <i class="fa fa-tag small"></i> <a href="{{ path('blog_tag', {name: tag.name}) }}" class="href">{{ tag.name }}</a>
                {% endfor %}
            </div>
            <hr>
            <p class="lead">{{ post.content }}</p>
        </article>

        <comment>
            {% for comment in post.comments %}
                {{ comment.content }}
                <hr>
            {% endfor %}
        </comment>
    </div>
{% endblock %}