{% extends 'TaichiBlogBundle::layout.html.twig' %}

{% block body_id 'blog_index' %}

{% block heading %}{% endblock %}

{% block content %}
    {% for post in posts %}
        <article class="post">
            <h1>
                <a href="{{ path('blog_post', {slug: post.slug}) }}">
                    {{ post.subject }}
                </a>
            </h1>

            <ul class="post-meta">
                <li><i class="fa fa-calendar small"></i> {{ post.createdAt|date("Y-m-d G:i") }}</li>
                <li><i class="fa fa-folder small"></i> <a
                            href="{{ path('blog_category', {name: post.category.name}) }}">{{ post.category.name }}</a></li>
                {% for tag in post.tags %}
                    <li><i class="fa fa-tag small"></i> <a
                                href="{{ path('blog_tag', {name: tag.name}) }}">{{ tag.name }}</a></li>
                {% endfor %}
            </ul>
            {{ post.summary|markdown }}
        </article>
        <hr>
    {% else %}
        <div class="well">Null</div>
    {% endfor %}

    <div class="navigation text-center">
        {{ knp_pagination_render(posts) }}
    </div>
{% endblock %}