{% extends 'TaichiBlogBundle::layout.html.twig' %}

{% block heading %}

{% endblock %}

{% block content %}
    <div class="col-sm-12">

        <div class="messages">
        </div>
        {% for post in posts %}
            <article class="post">
                <h4>
                    <a href="{{ path('blog_post', {slug: post.slug}) }}">
                        {{ post.subject }}
                    </a>
                </h4>

                <div>
                    <i class="fui-time small"></i> {{ post.createdAt|date("Y-m-d G:i") }}
                    <i class="fui-folder small"></i> <a
                            href="{{ path('blog_category', {name: post.category.name}) }}">{{ post.category.name }}</a>
                    {% for tag in post.tags %}
                        <i class="fui-tag small"></i> <a
                            href="{{ path('blog_tag', {name: tag.name}) }}">{{ tag.name }}</a>
                    {% endfor %}
                </div>
                <p class="lead">{{ post.summary }}</p>
            </article>
            <hr>
        {% else %}
            <div class="well">Null</div>
        {% endfor %}
        <div class="text-center">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}