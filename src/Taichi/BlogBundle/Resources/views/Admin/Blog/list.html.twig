{% extends "TaichiBlogBundle:Admin:layout.html.twig" %}

{% block title %}Taichi Blog Admin Panel{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link href="//cdn.bootcss.com/datatables/1.10.10/css/dataTables.bootstrap.min.css" rel="stylesheet">
    {% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Posts List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div id="dataTables-list_wrapper"
                             class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer"
                                           id="dataTables-list" role="grid"
                                           aria-describedby="dataTables-list_info">
                                        <thead>
                                        <tr role="row">
                                            <th class="sorting text-center" tabindex="0" aria-controls="dataTables-list"
                                                rowspan="1" colspan="1">ID
                                            </th>
                                            <th class="sorting text-center" tabindex="0" aria-controls="dataTables-list"
                                                rowspan="1" colspan="1">Subject
                                            </th>
                                            <th class="sorting text-center" tabindex="0" aria-controls="dataTables-list"
                                                rowspan="1" colspan="1">Category
                                            </th>
                                            <th class="sorting_desc text-center" tabindex="0" aria-controls="dataTables-list"
                                                rowspan="1" colspan="1"  aria-sort="descending"><i class="fa fa-calendar"></i> Created At
                                            </th>
                                            <th class="sorting text-center" tabindex="0" aria-controls="dataTables-list"
                                                rowspan="1" colspan="1"><i class="fa fa-cogs"></i> Actions
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% for post in posts %}
                                            <tr>
                                                <td class="text-center">{{ post.id }}</td>
                                                <td>{{ post.subject }}</td>
                                                <td class="text-center">{{ post.category.name }}</td>
                                                <td class="text-center">{% if post.createdAt %}{{ post.createdAt|date("Y-m-d G:i") }}{% endif %}</td>
                                                <td class="text-center">
                                                    <div class="item-actions">
                                                        <a href="{{ path('admin_post_show', { id: post.id }) }}"
                                                           class="btn btn-xs btn-success">
                                                            <i class="fa fa-file-o"></i> Show
                                                        </a>

                                                        <a href="{{ path('admin_post_edit', { id: post.id }) }}"
                                                           class="btn btn-xs btn-primary">
                                                            <i class="fa fa-edit"></i> Edit
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="4" align="center">No posts found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}

{% block javascripts %}
    <script src="//cdn.bootcss.com/datatables/1.10.10/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.bootcss.com/datatables/1.10.10/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#dataTables-list').DataTable({
                responsive: true
            });
        });
    </script>
    {{ parent() }}
{% endblock %}