{% extends "TaichiBlogBundle:Admin:layout.html.twig" %}

{% block title %}Taichi Blog Admin Panel{% endblock %}

{% block content %}
    <section id="content">
        <div class="container">
            <div class="block-header">
                <h2>{{ post.subject }}</h2>

                <ul class="actions">

                    <li>

                    </li>

                </ul>
            </div>

            <div class="card">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Summary</th>
                        <td>{{ post.summary|markdown }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ post.content|markdown }}</td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td><p>{{ post.user.username }}</p></td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td><p>{{ post.createdAt|date("F jS \\@ G:i") }}</p></td>
                    </tr>
                    </tbody>
                </table>
                <div class="card-body card-padding">
                    <div class="row">
                        <div class="col-md-6">
                            <a href="{{ path('admin_post_edit', { id: post.id }) }}" class="btn btn-lg btn-block btn-success">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                        </div>
                        <div class="col-md-6">
                            {{ include('TaichiBlogBundle:Admin:Blog/_form.html.twig', {
                                form: delete_form,
                                button_label: 'Delete',
                                button_css: 'btn btn-lg btn-block btn-danger',
                                show_confirmation: true,
                            }, with_context = false) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}