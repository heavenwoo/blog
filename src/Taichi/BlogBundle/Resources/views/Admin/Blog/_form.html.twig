{% if show_confirmation|default(false) %}
    {% set attr = {'data-confirmation': 'true'} %}
    {{ include('TaichiBlogBundle:Admin:Blog/_delete_post_confirmation.html.twig') }}
{% endif %}

{{ form_start(form, { attr: attr|default({}) }) }}
    {{ form_widget(form) }}

        <input type="submit" value="{{ button_label|default('Create Post') }}"
               class="{{ button_css|default("btn btn-success btn-lg btn-block") }}" data-toggle="modal"
               data-target="#confirmationModal"/>

        {% if include_back_to_home_link|default(false) %}
        <a href="{{ path('admin_post_list') }}" class="btn btn-link">
            Back to Posts list
        </a>

{% endif %}
{{ form_end(form) }}
